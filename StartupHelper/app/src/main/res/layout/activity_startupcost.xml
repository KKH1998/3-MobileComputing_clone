<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="344dp"
            android:layout_height="208dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            tools:srcCompat="@drawable/logo_megacoffee" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/font"
            android:text="메가엠지씨커피"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="16dp"
                android:fontFamily="@font/font"
                android:paddingLeft="30dp"
                android:paddingTop="23dp"
                android:text="@string/startupcost_cost"
                android:textSize="22dp"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="16dp"
                android:fontFamily="@font/font"
                android:paddingLeft="30dp"
                android:paddingTop="23dp"
                android:text="@string/startupcost_AvgMonSal"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="16dp"
                android:fontFamily="@font/font"
                android:paddingLeft="30dp"
                android:paddingTop="23dp"
                android:text="@string/startupcost_WidthMonSal"
                android:textSize="22dp"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="16dp"
                android:fontFamily="@font/font"
                android:paddingLeft="30dp"
                android:paddingTop="23dp"
                android:text="@string/startupcost_CountStore"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="90dp"
                android:layout_height="16dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="TextView"
                />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="90dp"
                android:layout_height="16dp"
                android:layout_gravity="right"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="90dp"
                android:layout_height="16dp"
                android:paddingTop="10dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="90dp"
                android:layout_height="16dp"
                android:paddingTop="10dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="TextView" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/call_img" />
    </LinearLayout>

</LinearLayout>

